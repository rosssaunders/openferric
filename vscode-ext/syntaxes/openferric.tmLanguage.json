{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "OpenFerric DSL",
  "scopeName": "source.openferric",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#declaration-keywords" },
    { "include": "#block-keywords" },
    { "include": "#statement-keywords" },
    { "include": "#frequency-constants" },
    { "include": "#boolean-constants" },
    { "include": "#type-keywords" },
    { "include": "#builtin-functions" },
    { "include": "#builtin-variables" },
    { "include": "#logical-operators" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.openferric",
          "match": "//.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.openferric",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.openferric",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.openferric",
          "match": "\\b\\d[\\d_]*(\\.[\\d_]+)?([eE][+-]?\\d+)?\\b"
        }
      ]
    },
    "declaration-keywords": {
      "patterns": [
        {
          "name": "keyword.control.product.openferric",
          "match": "\\bproduct\\b"
        },
        {
          "name": "keyword.other.declaration.openferric",
          "match": "\\b(notional|maturity)(?=\\s*:)"
        }
      ]
    },
    "block-keywords": {
      "patterns": [
        {
          "name": "keyword.control.block.openferric",
          "match": "\\b(underlyings|state|schedule)\\b"
        },
        {
          "name": "keyword.other.range.openferric",
          "match": "\\b(from|to)\\b"
        }
      ]
    },
    "statement-keywords": {
      "patterns": [
        {
          "name": "keyword.control.statement.openferric",
          "match": "\\b(let|if|then|else|pay|redeem|set|skip)\\b"
        }
      ]
    },
    "frequency-constants": {
      "patterns": [
        {
          "name": "constant.language.frequency.openferric",
          "match": "\\b(monthly|quarterly|semi_annual|annual)\\b"
        }
      ]
    },
    "boolean-constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.openferric",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "type-keywords": {
      "patterns": [
        {
          "name": "storage.type.openferric",
          "match": "\\b(bool|float)\\b"
        }
      ]
    },
    "builtin-functions": {
      "patterns": [
        {
          "name": "support.function.builtin.openferric",
          "match": "\\b(worst_of|best_of|performances|price|min|max|abs|exp|log|asset)\\b"
        }
      ]
    },
    "builtin-variables": {
      "patterns": [
        {
          "name": "variable.language.builtin.openferric",
          "match": "\\b(notional|observation_date|is_final)\\b(?!\\s*:)"
        }
      ]
    },
    "logical-operators": {
      "patterns": [
        {
          "name": "keyword.operator.logical.openferric",
          "match": "\\b(and|or|not)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.openferric",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.assignment.openferric",
          "match": "="
        },
        {
          "name": "keyword.operator.arithmetic.openferric",
          "match": "[+\\-*/]"
        }
      ]
    }
  }
}
